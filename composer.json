{
    "name": "tonystark/tron-api",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/tonystark199x202x/tron-api",
    "authors": [
        {
            "name": "Tony Stark",
            "email": "tonystark199x202x@gmail.com"
        }
    ],
    "keywords": [
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

    "require": {
        "php": "^7.4||^8.0",
        "fenguoz/data-types": "^1.0",
        "guzzlehttp/guzzle": "^7.5",
        "kornrunner/secp256k1": "^0.2.0",
        "web3p/web3.php": "dev-master",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "IEXBase\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "IEXBase\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
